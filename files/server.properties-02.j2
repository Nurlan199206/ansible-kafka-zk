broker.id=2
num.network.threads=3
num.io.threads=8
socket.send.buffer.bytes=102400
socket.receive.buffer.bytes=102400
# The maximum size of a request that the socket server will accept (protection against OOM)
socket.request.max.bytes=104857600
log.dirs=/tmp/kafka-logs
num.partitions=1
num.recovery.threads.per.data.dir=1
offsets.topic.replication.factor=1
transaction.state.log.replication.factor=1
transaction.state.log.min.isr=1
log.retention.hours=168
log.segment.bytes=1073741824
log.retention.check.interval.ms=30000
listeners=PLAINTEXT://:9092
advertised.host.name={{ansible_default_ipv4.address}}
advertised.port=9092
advertised.listeners=PLAINTEXT://{{ansible_default_ipv4.address}}:9092
zookeeper.connect={{hostvars['kafka-zk-01'].ansible_default_ipv4.address}}:2181,{{hostvars['kafka-zk-02'].ansible_default_ipv4.address}}:2181,{{hostvars['kafka-zk-03'].ansible_default_ipv4.address}}:2181
zookeeper.connection.timeout.ms=18000
